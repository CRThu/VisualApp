<Window x:Class="VisualApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisualApp"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        DataContext="{Binding Source={StaticResource Locator},Path=MainWindow}"
        d:DataContext="{Binding Source={StaticResource Locator},Path=MainWindow}"
        mc:Ignorable="d"
        Title="{Binding AppName}" Height="600" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="文件">
                <MenuItem Header="导入" Command="{Binding ImportDataCommand}"/>
            </MenuItem>
        </Menu>
        <Grid>
            <DataGrid ItemsSource="{Binding Data}" AutoGenerateColumns="True" IsReadOnly="True" Margin="5"/>
        </Grid>
    </DockPanel>
</Window>
